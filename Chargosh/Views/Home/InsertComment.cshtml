@model Chargosh.Models.Comment


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="container form-horizontal"> 
     
       @Html.DisplayFor(model=>model.ProductId)
       
        <div class="col m6 form-group">
            <div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control txtcomment", placeholder = "ایمیل" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            @*@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-1" })*@
        </div>
        <div class="col m6 form-group">
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control txtcomment", placeholder = "نام" } })

                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            @*@Html.LabelFor(model => model.Name ,htmlAttributes: new { @class = "control-label col-md-1"})*@
        </div>

        <div class="col m12 form-group txtcommentnazar">   
            <div>
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control txtcomment ", placeholder = "متن نظر" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
            @*@Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-1" })*@
        </div>

        <div class="form-group">
            <div class="col m12 btncomment">
                <input type="submit" value="ثبت نظر" class="btn btn-default right" />
                
                @Html.ActionLink("بازگشت", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
